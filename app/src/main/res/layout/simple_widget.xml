<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/piggy_bank"
        android:contentDescription="@string/img_piggy"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/piggy_bank"
        android:layout_alignBottom="@+id/total_amount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/piggy_bank"
        android:layout_toEndOf="@+id/piggy_bank" />

    <ImageButton
        android:id="@+id/refresh_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/refresh_btn"
        android:src="@drawable/ic_refresh"
        android:background="@android:color/transparent"
        android:layout_alignBottom="@+id/piggy_bank"
        android:layout_toRightOf="@+id/total_amount"
        android:layout_toEndOf="@+id/total_amount"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

</RelativeLayout>
